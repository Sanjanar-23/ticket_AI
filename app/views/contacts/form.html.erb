<%= form_with(model: @contact) do |f| %>
  <% if @contact.company %>
    <div class="mb-3">
      <label>Company</label>
      <input type="text" class="form-control" value="<%= @contact.company.name %>" readonly>
      <%= f.hidden_field :company_id %>
    </div>
  <% end %>

      <div>
      <%= label_tag :company_name, "Company" %>
      <%= text_field_tag :company_name, @contact.company.try(:name), readonly: true %>
      <%= f.hidden_field :company_id %>
      <%= f.text_field :company_id %>


    </div>

  <div class="mb-3">
    <%= f.label :contact_person %>
    <%= f.text_field :contact_person, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :designation %>
    <%= f.text_field :designation, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :phone %>
    <%= f.text_field :phone, class: "form-control" %>
  </div>
  <div class="mb-3">
    <%= f.label :email %>
    <%= f.text_field :email, class: "form-control" %>
  </div>
  <%= f.submit "Create Contact", class: "btn btn-primary" %>
<% end %>
