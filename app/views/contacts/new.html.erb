<h2>New Contact</h2>

<%= form_with(model: @contact, local: true) do |f| %>
  <div>
    <%= f.label :contact_person %>
    <%= f.text_field :contact_person %>
  </div>
  <div>
    <%= f.label :designation %>
    <%= f.text_field :designation %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <%= f.submit "Create Contact" %>
<% end %>
<%= link_to "Back to Companies", companies_path %>
