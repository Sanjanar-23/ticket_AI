<p style="color: green"><%= notice %></p>

<%= render @company %>

<div>
  <%= link_to "Edit this company", edit_company_path(@company) %> |
  <%= link_to "Back to companies", companies_path %>

  <%= link_to "Create Contact"%>
  <%= link_to "Create Contact", new_contact_path(company_id: @company.id), class: "btn btn-success" %>


  <%= button_to "Destroy this company", @company, method: :delete %>

  <h3>Contacts</h3>
<ul>
  <% @company.contacts.each do |contact| %>
    <li>
      <%= contact.contact_person %> - <%= contact.designation %> - <%= contact.phone %> - <%= contact.email %>
    </li>
  <% end %>
</ul>

</div>
