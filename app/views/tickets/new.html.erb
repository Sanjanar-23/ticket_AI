<div class="container mt-5">
  <h1 class="mb-4">Create a New Ticket</h1>

  <%= form_with model: @ticket, local: true do |f| %>
    <div class="mb-3">
      <%= f.label :company_name, class: "form-label" %>
      <%= f.text_field :company_name, class: "form-control", placeholder: "Enter company name" %>
    </div>

    <div class="mb-3">
      <%= f.label :customer_name, class: "form-label" %>
      <%= f.text_field :customer_name, class: "form-control", placeholder: "Enter customer name" %>
    </div>

    <div class="mb-3">
      <%= f.label :customer_number, class: "form-label" %>
      <%= f.number_field :customer_number, class: "form-control", placeholder: "Enter customer phone number" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter email address" %>
    </div>

    <div class="mb-3">
      <%= f.label :issue, class: "form-label" %>
      <%= f.text_field :issue, class: "form-control", placeholder: "Describe the issue" %>
    </div>

    <div class="mb-3">
      <%= f.label :status, class: "form-label" %>
      <%= f.select :status, options_for_select([['Open', 'open'], ['Closed', 'closed']], @ticket.status), {}, class: "form-select" %>
    </div>

    <%= f.submit "Create Ticket", class: "btn btn-primary" %>

    <%= link_to "Back to Tickets", tickets_path, class: "btn btn-secondary ms-2" %>

  <% end %>
</div>
