<div class="container">
  <h1>Edit Ticket</h1>

<%= form_with(model: @ticket, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :issue, "Issue" %>
    <%= form.text_field :issue, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :company_name, "Company Name" %>
    <%= form.text_field :company_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :customer_name, "Customer Name" %>
    <%= form.text_field :customer_name, class: "form-control" %>
  </div>
<div class="mb-3">
  <%= form.label :email, "Email" %>
  <%= form.email_field :email, class: "form-control" %>
</div>


  <div class="mb-3">
    <%= form.label :status, "Status" %>
    <%= form.select :status, ['open', 'closed', 'pending'], {}, class: "form-select" %>
  </div>

  <%= form.submit "Update Ticket", class: "btn btn-primary" %>
  <%= link_to "Cancel", ticket_path(@ticket), class: "btn btn-secondary ms-2" %>
<% end %>

</div>
