



<div class="chat-history-container">
  <h2>Chat History</h2>
  <% @messages.each do |message| %>
    <% row_type = message.role == 'user' ? 'user' : 'assistant' %>
    <div class="chat-row <%= row_type %>">
      <div class="chat-bubble">
        <strong><%= message.role.capitalize %>:</strong> <%= message.content %>
      </div>
    </div>
  <% end %>
  <%= link_to "Ask Another Question", new_message_path %>
  <%= button_to "Clear Chat", clear_messages_path, method: :delete, data: { confirm: "Are you sure you want to clear the chat?" } %>
</div>
