
<div class="question-form-container">
  <h2>Question Me!</h2>
  <%= form_with model: @message, local: true, html: { class: "question-form" } do |f| %>
    <%= f.label :content, "Your question" %>
    <%= f.text_area :content, rows: 4 %>
    <%= f.submit "Ask" %>
  <% end %>
  <%= link_to "View Chat History", messages_path %>
</div>
